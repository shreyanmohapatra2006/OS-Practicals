#include <stdio.h>

// First-fit, Best-fit and Worst-fit memory allocation
int main() {
    int nb, np;
    int b[10], p[10];
    int alloc[10];
    int tempb[10];
    int i, j;

    printf("Enter number of blocks: ");
    scanf("%d", &nb);
    printf("Enter size of each block:\n");
    for (i = 0; i < nb; i++) {
        printf("Block %d: ", i + 1);
        scanf("%d", &b[i]);
    }

    printf("Enter number of processes: ");
    scanf("%d", &np);
    printf("Enter size of each process:\n");
    for (i = 0; i < np; i++) {
        printf("Process %d: ", i + 1);
        scanf("%d", &p[i]);
    }

    /* ---------- FIRST FIT ---------- */
    for (i = 0; i < nb; i++) tempb[i] = b[i];
    for (i = 0; i < np; i++) alloc[i] = -1;

    for (i = 0; i < np; i++) {
        for (j = 0; j < nb; j++) {
            if (tempb[j] >= p[i]) {
                alloc[i] = j;
                tempb[j] -= p[i];
                break;
            }
        }
    }

    printf("\n--- FIRST FIT ---\n");
    printf("Process\tSize\tBlock\n");
    for (i = 0; i < np; i++) {
        if (alloc[i] != -1)
            printf("P%d\t%d\tB%d\n", i + 1, p[i], alloc[i] + 1);
        else
            printf("P%d\t%d\tNot Allocated\n", i + 1, p[i]);
    }

    /* ---------- BEST FIT ---------- */
    for (i = 0; i < nb; i++) tempb[i] = b[i];
    for (i = 0; i < np; i++) alloc[i] = -1;

    for (i = 0; i < np; i++) {
        int best = -1;
        for (j = 0; j < nb; j++) {
            if (tempb[j] >= p[i]) {
                if (best == -1 || tempb[j] < tempb[best])
                    best = j;
            }
        }
        if (best != -1) {
            alloc[i] = best;
            tempb[best] -= p[i];
        }
    }

    printf("\n--- BEST FIT ---\n");
    printf("Process\tSize\tBlock\n");
    for (i = 0; i < np; i++) {
        if (alloc[i] != -1)
            printf("P%d\t%d\tB%d\n", i + 1, p[i], alloc[i] + 1);
        else
            printf("P%d\t%d\tNot Allocated\n", i + 1, p[i]);
    }

    /* ---------- WORST FIT ---------- */
    for (i = 0; i < nb; i++) tempb[i] = b[i];
    for (i = 0; i < np; i++) alloc[i] = -1;

    for (i = 0; i < np; i++) {
        int worst = -1;
        for (j = 0; j < nb; j++) {
            if (tempb[j] >= p[i]) {
                if (worst == -1 || tempb[j] > tempb[worst])
                    worst = j;
            }
        }
        if (worst != -1) {
            alloc[i] = worst;
            tempb[worst] -= p[i];
        }
    }

    printf("\n--- WORST FIT ---\n");
    printf("Process\tSize\tBlock\n");
    for (i = 0; i < np; i++) {
        if (alloc[i] != -1)
            printf("P%d\t%d\tB%d\n", i + 1, p[i], alloc[i] + 1);
        else
            printf("P%d\t%d\tNot Allocated\n", i + 1, p[i]);
    }

    return 0;
}

//input

Enter number of blocks: 3
Block 1: 4
Block 2: 6
Block 3: 5

Enter number of processes: 3
Process 1: 2
Process 2: 5
Process 3: 4


//output

--- FIRST FIT ---
Process Size Block
P1     2    B1
P2     5    B2
P3     4    B3

--- BEST FIT ---
P1     2    B1
P3     4    B3
P2     5    B2

--- WORST FIT ---
P2     5    B2
P3     4    B3
P1     2    B1
