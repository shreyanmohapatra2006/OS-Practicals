#include <stdio.h>

// Shortest Job First (non-preemptive) scheduling
int main() {
    int n, bt[20], p[20], wt[20], tat[20];
    int i, j, temp;
    float avg_wt = 0, avg_tat = 0;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    for (i = 0; i < n; i++) {
        printf("Burst time of P%d: ", i + 1);
        scanf("%d", &bt[i]);
        p[i] = i + 1;
    }

    // sort by burst time
    for (i = 0; i < n - 1; i++)
        for (j = 0; j < n - i - 1; j++)
            if (bt[j] > bt[j + 1]) {
                temp = bt[j]; bt[j] = bt[j + 1]; bt[j + 1] = temp;
                temp = p[j];  p[j]  = p[j + 1];  p[j + 1]  = temp;
            }

    wt[0] = 0;
    for (i = 1; i < n; i++)
        wt[i] = wt[i - 1] + bt[i - 1];

    for (i = 0; i < n; i++)
        tat[i] = wt[i] + bt[i];

    printf("\nP\tBT\tWT\tTAT\n");
    for (i = 0; i < n; i++) {
        printf("P%d\t%d\t%d\t%d\n", p[i], bt[i], wt[i], tat[i]);
        avg_wt  += wt[i];
        avg_tat += tat[i];
    }

    printf("Average WT  = %.2f\n", avg_wt / n);
    printf("Average TAT = %.2f\n", avg_tat / n);

    return 0;
}

//input

Enter number of processes: 3
Burst time of P1: 6
Burst time of P2: 2
Burst time of P3: 4


//output

P   BT  WT  TAT
P2  2   0   2
P3  4   2   6
P1  6   6   12

Average WT  = 2.67
Average TAT = 6.67

